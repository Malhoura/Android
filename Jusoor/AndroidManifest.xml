<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jusoor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:name="android.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/jusoor"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.jusoor.Login"/>
            </intent-filter>
        </activity>
        <activity android:name=".Register">
            <intent-filter>
                <action android:name="com.example.jusoor.Register" 
                    android:label="@string/app_name"/>
            </intent-filter>
        </activity>
        <activity android:name=".Home"></activity>
        <activity android:name=".About"></activity>
        <activity android:name=".Contact"></activity>
        <activity android:name=".Tabs"></activity>
        <activity android:name=".Mail"></activity>
        <activity android:name=".Photos"></activity>
        <activity android:name=".News"></activity>
        <activity android:name=".GetInvolved"></activity>
        
    </application>

</manifest>


